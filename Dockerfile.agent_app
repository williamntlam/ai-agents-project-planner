FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY agent_app/requirements.txt ./agent_app/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r agent_app/requirements.txt

# Copy etl_pipeline requirements (needed for RAG tool initialization)
COPY etl_pipeline/requirements.txt ./etl_pipeline/
RUN pip install --no-cache-dir -r etl_pipeline/requirements.txt

# Copy agent_app code
COPY agent_app/ ./agent_app/

# Copy etl_pipeline (needed for RAG tool initialization)
COPY etl_pipeline/ ./etl_pipeline/

# Create output and logs directories
RUN mkdir -p /app/output /app/logs

# Set Python path (so imports work correctly)
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command - keep container running (can be overridden)
WORKDIR /app/agent_app
# Use tail -f to keep container running, or override with docker exec
CMD ["tail", "-f", "/dev/null"]

